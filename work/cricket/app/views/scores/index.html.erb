<h1>Listing scores</h1>

<table>
  <thead>
    <tr>
      <th>Total score</th>
      <th>Wickets</th>
      <th>Highest score</th>
      <th>Player</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.total_score %></td>
        <td><%= score.wickets %></td>
        <td><%= score.highest_score %></td>
        <td><%= score.palyer.player_name %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

